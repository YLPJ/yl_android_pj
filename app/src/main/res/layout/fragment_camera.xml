<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.liwen.dor.ui.fragment.CameraFragment">

    <RelativeLayout
            android:id="@+id/constraintLayout_control_Layout_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true"

        >
            <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_weight="2"
            >

                <ImageButton
                        android:id="@+id/button_layout1_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:background="@android:color/transparent"
                        android:src="@drawable/up"
                        android:tag="up|stop"
                />

                <ImageButton
                        android:id="@+id/button_layout1_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/left"
                        android:tag="left|leftstop"
                />

                <ImageButton
                        android:id="@+id/button_layout1_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:background="@android:color/transparent"
                        android:src="@drawable/down"
                        android:tag="down|stop"
                />

                <ImageButton
                        android:id="@+id/button_layout1_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/right"
                        android:tag="right|stop"
                />
            </GridLayout>
            <!-- 拉近拉远 -->
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:layout_marginLeft="20dp"
            >
                <Button android:layout_width="120dp" android:layout_height="60dp" android:layout_marginTop="10dp" android:text="拉近"/>
                <Button android:layout_width="120dp" android:layout_height="60dp" android:layout_marginTop="10dp" android:text="1"/>
                <Button android:layout_width="120dp" android:layout_height="60dp" android:layout_marginTop="10dp" android:text="3"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:layout_marginLeft="20dp"
            >
                <Button android:layout_width="120dp" android:layout_height="60dp" android:layout_marginTop="10dp" android:text="拉近"/>
                <Button android:layout_width="120dp" android:layout_height="60dp" android:layout_marginTop="10dp" android:text="2"/>
                <Button android:layout_width="120dp" android:layout_height="60dp" android:layout_marginTop="10dp" android:text="4"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
